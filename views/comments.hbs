<div class="column">
    <div class="column col-11 col-sm-12" id="blog-content">
        <h1>Comments on blog post</h1>
        {{#if Comments.length}}
        {{#each Comments}}
            <div class="card">
                <div class="card-body" id="card-content">
                    <h1><a href="/comment/{{this.id}}" target="_blank">{{this.username}}</a></h1>
                    <p>{{this.content}}</p>
                </div>
            </div>
            <br>
        {{/each}}
        {{else}}
        <br>
        <h1>No Comments yet</h1>
        {{/if}}
    </div>
</div>