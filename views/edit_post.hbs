
{{#if validationErrors.length}}

<ul>
    {{#each validationErrors}}
    <li>{{this}}</li>
    {{/each}}
</ul>

<form action="/edit/post/{{Post.post_slug}}" method="POST">
<input type="hidden" name="_csrf" value="{{csrfToken}}">
  <fieldset>
    <div class="form-group">
      <label class="form-label" for="input-example-19">Slug</label>
      <input class="form-input is-error" type="text" id="input-example-19" placeholder="url name" name="slug" value="{{Post.post_slug}}">
    </div>
    <div class="form-group">
        <label class="form-label" for="category-select">Category</label>
        <select class="form-select is-error" id="category-select" name="category" value="{{Post.post_category}}">
            <option>Choose an category</option>
            <option>All</option>
            <option>Tech</option>
            <option>Random</option>
        </select>
    </div>
    <div class="form-group">
      <label class="form-label" for="input-post-content">Message</label>
      <textarea class="form-input is-error" id="input-post-content" placeholder="Textarea" rows="10" name="content">{{Post.post_content}}</textarea>
    </div>
  </fieldset>
  <div class="form-group">
        <input class="form-submit" type="submit" placeholder="Login">
    </div>
</form>

{{else}}

